<%= form_for @user, :method => :put do |f| %>
  <fieldset>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    </h2>
    <br/>
    <% if @user == current_user %>
      </br>
      <h1>Profil Ändern</h1>
      </br>
      <%= f.label :name %>
      <%= f.text_field :name, :class => "input-medium" %>
      <%= f.label :email %>
      <%= f.text_field :email, :class => "input-medium" %>
      <%= f.label :password%>
      <%= f.text_field :password, :class => "input-medium" %>
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation, :class => "input-medium" %>
    <% else %>
      </br>
      <h1>Status Ändern</h1>
      </br>
      <p>
      <h3>Name: <%= @user.name %></h3>
      </p>
      <h3>Email: <%= @user.email%></h3>
      <% role = {"admin" => "admin", "editor" => "editor"} %>
      <h3>Status: <%= f.select(:role, options_for_select([["admin", "admin"], ["editor", "editor"]], role[@user.role])) %></h3>
    <% end %>
    <div class="actions">
      <%= f.submit "Speichern", :id => "update_user"%>
    </div>
  </fieldset>
<% end %>
