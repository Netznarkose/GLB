<% content_for :content do %>
  <% if flash[:notice] %> 
    <div class="alert alert-notice">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= flash[:notice] %></strong>
    </div>
  <% end %>
  <h1>Listing my entries</h1>

  <table class="table table-striped">
    <tr>
      <th>Verfasser</th>
      <th>Namensk√ºrzel</th>
