<% content_for :sidebar do %>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Suche</li>
      <%= form_tag users_entries_path, method: "get", id: "search_form" do %>
        <fieldset>
          <li>
            <label for="search">Suchbegriff</label>
            <input type="text" id="search" name="search" class="span12" value="<%= params[:search] %>"></input>
          </li>
        <fieldset>
        <li>
          <button id="search_button" class="btn">Suchen</button>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<% content_for :content do %>
  <% if flash[:notice] %> 
    <div class="alert alert-notice">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= flash[:notice] %></strong>
    </div>
  <% end %>
  <h1>Listing my entries</h1>

  <table class="table table-striped">
    <tr>
      <th>Verfasser</th>
      <th>Namensk√ºrzel</th>
      <th>Kennzahl</th>
      <th>Spaltenzahl</th>
      <th>Japanische umschrift</th>
      <th>Kanji</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.user.name %></td>
        <td><%= entry.namenskuerzel %></td>
        <td><%= entry.kennzahl %></td>
        <td><%= entry.spaltenzahl %></td>
        <td><%= entry.japanische_umschrift %></td>
        <td><%= entry.kanji %></td>
        <td><%= link_to 'Show', entry %>
        <%= link_to 'Edit', edit_entry_path(entry) %>
        <% if current_user.role == 'admin' %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </table>
<% end %>
