<% content_for :content do %>
  <p id="notice"><%= notice %></p>

  <p>
  <b>Name:</b>
  <%= @user.name %>
  </p>

  <p>
  <b>Email:</b>
  <%= @user.email %>
  </p>

  <p>
  <b>Status:</b>
  <%= form_for @user, :url => update_user_role_path, :method => :put  do |f| %>
    <% role = {"admin" => "admin", "editor" => "editor"} %>
    <%= f.select(:role, options_for_select([["admin", "admin"], ["editor", "editor"]], role[@user.role])) %> 
    </p>

    <%= f.submit "Update", :id => "update_user"%> 
  <% end %>
  <%= link_to 'Back', users_path %>
<% end %>
