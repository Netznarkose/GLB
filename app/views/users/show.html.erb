<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Status:</b>
  <%= form_for @user, :url => update_user_role_path, :method => :put  do |f| %>
  <% role = {"admin" => "admin", "editor" => "editor", "user" => "user"} %>
  <%= f.select(:role, options_for_select([["admin", "admin"], ["editor", "editor"], ["user", "user"]], role[@user.role])) %> 
</p>

<%= f.submit "Update role", :id => "update_user"%> 
<% end %>
<%= link_to 'Back', users_path %>
