<% content_for :content do %>
  <h1>Mitarbeiter anlegen</h1>

  <% if flash[:notice] %>
    <div class="alert alert-notice">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= raw(flash[:notice]) %></strong>
    </div>
  <% end %>
  <%= form_for @user, :method => :post do |f| %>
    <fieldset>

        <%= f.label :name %>
        <%= f.text_field :name, :class => "input-medium" %>
        <%= f.label :email %>
        <%= f.text_field :email, :class => "input-medium" %>
        <%= f.label :password %>
        <%= f.text_field :password, :class => "input-medium", :type => "password" %>
        <%= f.label :password_confirmation %>
        <%= f.text_field :password_confirmation, :class => "input-medium", :type => "password" %>
        <br />
        Status
        <br />
        <%= f.select(:role, options_for_select([["Admin", "admin"], ["Editor", "editor"]], "editor")) %>
      <div class="actions">
        <%= f.submit "Speichern", :id => "update_user"%>
      </div>
    </fieldset>
  <% end %>

  <%= link_to 'ZurÃ¼ck', users_path %>
<% end %>
