<%= content_for :content do %>
  <h1>Editing comment</h1>

    <%= form_for(@comment, :method => :put) do |f| %>
      <fieldset>
        <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

            <ul>
              <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.label :comment %><br />
        <%= f.text_area :comment, :class => "comment_field", :value => @comment.comment.to_s %>
        <div class="actions">
          <%= f.submit %>
        </div>
      </fieldset>
    <% end%>
  <%= link_to 'Back', entries_path(@comment.entry) %>
<% end %>
