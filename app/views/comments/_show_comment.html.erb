      <li>
        <strong><%= comment.user.name %></strong> 
        <%= "(#{comment.updated_at.to_formatted_s(:short)})" %>
        <% if can?(:destroy, comment)%>
          <div class="btn-group" role="group" aria-label="..."style="float: right;">
            <button type="button" <%= link_to 'Bearbeiten', edit_entry_comment_path(@entry, comment), class: 'btn btn-default' %></button>
            <button type="button" <%= link_to "LÃ¶schen", [@entry, comment], method: :delete, class: 'btn btn-default' %></button>
