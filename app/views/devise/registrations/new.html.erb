<% content_for :content do %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f| %>
    <fieldset>
      <legend><%= t('.sign_up', :default => "Sign up") %></legend>
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, :class => "input-large" %>

      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, :class => "input-large" %>

      <%= f.label :password %>
      <%= f.password_field :password, :class => "input-large"%>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => "input-large"%>


      <div><%= f.submit t('.sign_up', :default => "Sign up") %></div>
    </fieldset>

  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
