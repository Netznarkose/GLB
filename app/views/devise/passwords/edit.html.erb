<% content_for :content do %>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "well" }) do |f| %>
    <fieldset>
      <legend><%= t('.change_your_password', :default => 'Change your password') %></legend>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.label :password, t('.new_password', :default => 'New password') %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
      <%= f.password_field :password_confirmation %>

      <div><%= f.submit t('.change_my_password', :default => 'Change my password') %></div>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
